  <profiles>
   <profile>
    <id>nojiio</id>
    <activation>
     <property>
      <name>nojiio</name>
     </property>
    </activation>
    <build>
     <plugins>
      <plugin>
       <groupId>org.apache.maven.plugins</groupId>
       <artifactId>maven-surefire-plugin</artifactId>
       <configuration>
        <excludes>
         <exclude>**/DicomImageWriterTest.java</exclude>
        </excludes>
       </configuration>
      </plugin>
     </plugins>
    </build>
   </profile>
  </profiles>
  <dependencies>
    <dependency>
      <groupId>org.dcm4che.test</groupId>
      <artifactId>dcm4che2-test-image</artifactId>
      <version>1.1</version>
