#!/bin/sh
### ====================================================================== ###
##                                                                          ##
##  dcm4che2/xml2dcm  Launch Script                                         ##
##                                                                          ##
### ====================================================================== ###

### $Id$ ###

DIRNAME=`dirname $0`

# OS specific support (must be 'true' or 'false').
cygwin=false;
case "`uname`" in
    CYGWIN*)
        cygwin=true
        ;;
esac

# For Cygwin, ensure paths are in UNIX format before anything is touched
if $cygwin ; then
    [ -n "$DCM4CHE_HOME" ] &&
        DCM4CHE_HOME=`cygpath --unix "$DCM4CHE_HOME"`
    [ -n "$JAVA_HOME" ] &&
        JAVA_HOME=`cygpath --unix "$JAVA_HOME"`
fi

# Setup DCM4CHE_HOME
if [ "x$DCM4CHE_HOME" = "x" ]; then
    DCM4CHE_HOME=`cd $DIRNAME/..; pwd`
fi
export DCM4CHE_HOME

# Setup the JVM
if [ "x$JAVA_HOME" != "x" ]; then
    JAVA=$JAVA_HOME/bin/java
else
    JAVA="java"
fi

# Setup the classpath
DCM4CHE_CLASSPATH="$DCM4CHE_HOME/etc/"
DCM4CHE_CLASSPATH="$DCM4CHE_CLASSPATH:$DCM4CHE_HOME/lib/dcm4che-tool-xml2dcm-2.0-alpha-1.jar"
DCM4CHE_CLASSPATH="$DCM4CHE_CLASSPATH:$DCM4CHE_HOME/lib/dcm4che-core-2.0-alpha-1.jar"
DCM4CHE_CLASSPATH="$DCM4CHE_CLASSPATH:$DCM4CHE_HOME/lib/log4j-1.2.8.jar"
DCM4CHE_CLASSPATH="$DCM4CHE_CLASSPATH:$DCM4CHE_HOME/lib/commons-cli-1.0.jar"

# For Cygwin, switch paths to Windows format before running java
if $cygwin; then
    DCM4CHE_HOME=`cygpath --path --windows "$DCM4CHE_HOME"`
    JAVA_HOME=`cygpath --path --windows "$JAVA_HOME"`
    DCM4CHE_CLASSPATH=`cygpath --path --windows "$DCM4CHE_CLASSPATH"`
fi

# Execute the JVM
exec $JAVA \
    $JAVA_OPTS \
    -classpath $DCM4CHE_CLASSPATH \
    org.dcm4che2.tool.xml2dcm.Xml2Dcm "$@"
