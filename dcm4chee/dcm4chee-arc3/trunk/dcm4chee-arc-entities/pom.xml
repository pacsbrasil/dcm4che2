<?xml version="1.0" encoding="UTF-8"?>
<project>
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>dcm4che</groupId>
    <artifactId>dcm4chee-arc</artifactId>
    <version>3.0.0-SNAPSHOT</version>
  </parent>
  <groupId>dcm4che</groupId>
  <artifactId>dcm4chee-arc-entities-${db}</artifactId>
  <version>3.0.0-SNAPSHOT</version>
  <description>EJB3 Entities for DCM4CHEE Archive</description>
  <properties>
    <hibernate.hbm2ddl.auto>validate</hibernate.hbm2ddl.auto>
    <hibernate.show_sql>false</hibernate.show_sql>
    <jboss.home>/home/gunter/jboss-4.2.2.GA</jboss.home>
  </properties>
  <dependencies>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-log4j12</artifactId>
      <version>1.4.3</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>dcm4che</groupId>
      <artifactId>dcm4che-core</artifactId>
      <version>2.0.13</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>jboss</groupId>
      <artifactId>ejb3-persistence</artifactId>
      <version>4.2.2.GA</version>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>hibernate3-maven-plugin</artifactId>
        <version>2.1-SNAPSHOT</version>
        <executions>
          <execution>
            <phase>process-classes</phase>
            <goals>
              <goal>hbm2ddl</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <components>
            <component>
              <name>hbm2ddl</name>
              <implementation>jpaconfiguration</implementation>
            </component>
          </components>
          <componentProperties>
            <ejb3>true</ejb3>
            <drop>false</drop>
            <create>true</create>
            <export>false</export>
            <update>false</update>
            <console>false</console>
            <outputfilename>dcm4chee-arc-${db}.ddl</outputfilename>
            <delimiter>;</delimiter>
            <format>true</format>
          </componentProperties>
        </configuration>
      </plugin>
    </plugins>
    <filters>
      <filter>src/main/filters/${db}.properties</filter>
    </filters>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
      </resource>
    </resources>
  </build>
</project>