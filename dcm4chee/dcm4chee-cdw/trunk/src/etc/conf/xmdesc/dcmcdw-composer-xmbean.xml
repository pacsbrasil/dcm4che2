<?xml version="1.0" encoding="UTF-8"?>

<!-- $Id$ -->

<!DOCTYPE mbean PUBLIC
   "-//JBoss//DTD JBOSS XMBEAN 1.1//EN"
   "http://www.jboss.org/j2ee/dtd/jboss_xmbean_1_1.dtd">

<mbean>
   <description>Media Composer
   </description>

   <descriptors>
      <persistence persistPolicy="OnUpdate"
         persistPeriod="10"
         persistLocation="${jboss.server.data.dir}"
         persistName="MediaComposer.ser"/>
      <currencyTimeLimit value="0"/>
      <state-action-on-update value="keep-running"/>
      <persistence-manager value="org.jboss.mx.persistence.ObjectStreamPersistenceManager" />
   </descriptors>

   <class>org.dcm4chex.cdw.mbean.MediaComposer</class>

   <constructor>
      <description>The default constructor</description>
      <name>MediaComposer</name>
   </constructor>

   <!-- Attributes -->
   <attribute access="read-write"
      getMethod="getSpoolDirName"
      setMethod="setSpoolDirName">
      <description>Used internally - do NOT modify.
      </description>
      <name>SpoolDirName</name>
      <type>javax.management.ObjectName</type>      
      <descriptors>
         <value value="dcmcdw:service=SpoolDir" />
      </descriptors>
   </attribute>
   <attribute access="read-write"
      getMethod="isCleanFilesDisabled"
      setMethod="setCleanFilesDisabled">
      <description>No cleanup of generated fileset and referenced objects
      in failure case.
      </description>
      <name>CleanFilesDisabled</name>
      <type>boolean</type>
      <descriptors>
         <value value="false" />
      </descriptors>
   </attribute>
   <attribute access="read-write"
      getMethod="getFileSetDescriptorFile"
      setMethod="setFileSetDescriptorFile">
      <description>Description not yet written.
      </description>
      <name>FileSetDescriptorFile</name>
      <type>java.lang.String</type>      
      <descriptors>
         <value value="README.TXT" />
      </descriptors>
   </attribute>
   <attribute access="read-write"
      getMethod="getCharsetOfFileSetDescriptorFile"
      setMethod="setCharsetOfFileSetDescriptorFile">
      <description>Description not yet written.
      </description>
      <name>CharsetOfFileSetDescriptorFile</name>
      <type>java.lang.String</type>      
      <descriptors>
         <value value="ISO_IR 100" />
      </descriptors>
   </attribute>
   <attribute access="read-write"
      getMethod="getDisplayApplicationDir"
      setMethod="setDisplayApplicationDir">
      <description>Description not yet written.
      </description>
      <name>DisplayApplicationDir</name>
      <type>java.lang.String</type>      
      <descriptors>
         <value value="VIEWER" />
      </descriptors>
   </attribute>
   <attribute access="read-write"
      getMethod="isMakeIsoImage"
      setMethod="setMakeIsoImage">
      <description>Description not yet written.
      </description>
      <name>MakeIsoImage</name>
      <type>boolean</type>      
      <descriptors>
         <value value="true" />
      </descriptors>
   </attribute>
   &defattr;
   
   <!-- Operations -->
   &defops;
</mbean>
