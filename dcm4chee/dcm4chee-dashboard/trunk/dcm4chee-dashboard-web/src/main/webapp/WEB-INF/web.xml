<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	 version="2.4">

	<display-name>dcm4chee-dashboard</display-name>
	<filter>
		<filter-name>wicket.dcm4chee-dashboard</filter-name>
		<filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
	    <init-param>
	      <param-name>applicationClassName</param-name>
	      <param-value>org.dcm4chee.dashboard.web.WicketApplication</param-value>
	    </init-param>
	    <init-param>
	      <param-name>DashboardServiceName</param-name>
	      <param-value>org.dcm4chee.dashboard.mbean:service=DashboardService</param-value>
	    </init-param>
	</filter>
	<filter-mapping>
		<filter-name>wicket.dcm4chee-dashboard</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<context-param>
	    <param-name>configuration</param-name>
		<param-value>deployment</param-value>
	</context-param>
	<security-constraint>
        <display-name>SecurityConstraint</display-name>
        <web-resource-collection>
             <web-resource-name>All resources</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>WebUser</role-name>
        </auth-constraint>
        <user-data-constraint>
             <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-role>
    	<role-name>WebUser</role-name>
    </security-role>
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>Dcm4chee-realm</realm-name>
    </login-config>
</web-app>
