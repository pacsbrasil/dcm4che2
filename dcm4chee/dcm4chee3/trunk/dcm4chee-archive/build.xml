<project name="dcm4chee3-archive" default="jar">
    <!-- Allow user to adjust build properties without
	modifying this build script.
	-->
    <property file="build.properties" />
    <property file="../build.properties" />

    <property name="version" value="3.0.0-alpha" />

    <!-- Java properties -->
    <property name="javac.compiler" value="modern" />
    <property name="javac.debug" value="on" />
    <property name="javac.nowarn" value="off" />
    <property name="javac.source" value="1.5" />
    <property name="javac.target" value="1.5" />

    <!-- Input properties -->
    <property name="bin.dir" value="${basedir}/bin" />
    <property name="lib.dir" value="${basedir}/lib" />
    <property name="src.dir" value="${basedir}/src/main" />
    <property name="src.java" value="${src.dir}/java" />
    <property name="src.etc" value="${src.dir}/etc" />

    <!-- Output properties -->
    <property name="target.dir" value="${basedir}/target"/>
	<property name="target.bin" value="${target.dir}/bin"/>
	<property name="target.classes" value="${target.dir}/classes"/>
	<property name="target.deploy" value="${target.dir}/deploy"/>
	<property name="target.lib" value="${target.dir}/lib"/>
    <property name="build.javadocs.dir" value="${target}/doc/api" />

    <!-- Override with your dcm4che14 dist location -->
    <property name="dcm4che.home" value="../../../dcm4jboss-all/dcm4che14/build" />
    <property name="dcm4che.jar" value="${dcm4che.home}/lib/dcm4che.jar" />
    <property name="jai_imagio.jar" value="${dcm4che.home}/../lib/jai_imageio.jar" />

    <!-- Override with your dcm4chee-common dist location -->
    <property name="dcm4chee-common.home" value="../dcm4chee-common" />
    <property name="dcm4chee-common.target" value="${dcm4chee-common.home}/target" />
    <property name="dcm4chee-common.src" value="${dcm4chee-common.home}/src" />

    <!-- Override with your JBoss/Web server bundle dist location -->
    <property name="jboss.home" value="${user.home}/jboss-4.2.0.GA" />
    <property name="jboss.server" value="${jboss.home}/server" />
    <property name="jboss.server.home" value="${jboss.home}/server/default" />
    <property name="jboss.deploy" value="${jboss.server.home}/deploy" />
    <property name="jboss.ejb3" value="${jboss.deploy}/ejb3.deployer" />

    <path id="class.path">
        <pathelement location="${dcm4che.jar}" />
        <pathelement location="${jai_imagio.jar}" />
        <pathelement location="${dcm4chee-common.target}/lib/dcm4chee-common.jar" />
        <pathelement location="${dcm4chee-common.home}/lib/spring.jar" />
        <pathelement location="${lib.dir}/commons-compress-20050911.jar"/>
		<pathelement location="${lib.dir}/commons-net-1.4.1.jar"/>
		<pathelement location="${lib.dir}/dcm4che-audit-2.0.11.jar"/>
		<pathelement location="${jboss.home}/bin/"/>
		<pathelement location="${jboss.home}/client/jmx-rmi-connector-client.jar"/>
		<fileset dir="${jboss.home}/lib">
			<include name="*.jar"/>
		</fileset>
		<fileset dir="${jboss.server.home}/lib">
			<include name="*.jar"/>
		</fileset>
        <fileset dir="${jboss.ejb3}">
            <include name="*.jar" />
        </fileset>
    </path>

    <!-- =================================================================== -->
    <!-- Initialize                                                          -->
    <!-- =================================================================== -->

    <target name="init">
        <tstamp>
            <format property="TODAY" pattern="dd.MM.yyyy" />
        </tstamp>
    </target>

    <!-- =================================================================== -->
    <!-- Prepares the directory structure                                    -->
    <!-- =================================================================== -->
    <target name="prepare" depends="init">
        <mkdir dir="${target.classes}" />
        <mkdir dir="${target.bin}" />
        <mkdir dir="${target.lib}" />
        <mkdir dir="${target.deploy}" />
    </target>

    <!-- =================================================================== -->
    <!-- Compiles the source code                                            -->
    <!-- =================================================================== -->
    <target name="compile" depends="prepare">
        <javac destdir="${target.classes}" debug="${javac.debug}" deprecation="off" optimize="on" classpathref="class.path" compiler="${javac.compiler}" nowarn="${javac.nowarn}" 
                source="${javac.source}" target="${javac.target}">
            <src path="${src.java}" />
        </javac>
    </target>

    <!-- =================================================================== -->
    <!-- build jar                                        -->
    <!-- =================================================================== -->

    <target name="jar" depends="compile">
        <jar jarfile="${target.lib}/dcm4chee-archive.jar">
            <manifest>
                <attribute name="Class-Path" value="dcm4che.jar dcm4chee-common.jar" />
                <attribute name="Implementation-Title" value="dcm4chee-archive" />
                <attribute name="Implementation-Version" value="${version} ${TODAY}" />
                <attribute name="Implementation-Vendor" value="dcm4che.org" />
            </manifest>
            <fileset dir="${target.classes}" excludes="org/jboss/**" />
        </jar>
        <jar jarfile="${target.bin}/verifytar.jar">
            <manifest>
                <attribute name="Main-Class" value="org.dcm4che.archive.hsm.VerifyTar" />
                <attribute name="Class-Path" value="commons-compress-20050911.jar  ../server/default/lib/commons-compress-20050911.jar" />
                <attribute name="Implementation-Title" value="verifytar" />
                <attribute name="Implementation-Version" value="${version} ${TODAY}" />
                <attribute name="Implementation-Vendor" value="dcm4che.org" />
            </manifest>
            <fileset dir="${target.classes}">
                <include name="org/dcm4che/archive/hsm/VerifyTar*" />
            </fileset>
        </jar>

    </target>

    <!-- =================================================================== -->
    <!-- Cleans up the current build                                         -->
    <!-- =================================================================== -->

    <target name="clean">
        <delete dir="${target.dir}" />
    </target>


</project>
