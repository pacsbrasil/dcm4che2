<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" 
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>dcm4che.dcm4chee</groupId>
    <artifactId>dcm4chee-usr</artifactId>
    <version>0.0.1</version>
  </parent>
  <groupId>dcm4che.dcm4chee</groupId>
  <artifactId>dcm4chee-usr-ear</artifactId>
  <packaging>ear</packaging>
  <version>0.0.1-SNAPSHOT</version>
  <name>Assemble ear for dcm4chee application</name>
  <dependencies>
    <dependency>
      <groupId>dcm4che.dcm4chee</groupId>
      <artifactId>dcm4chee-usr-entity</artifactId>
      <type>ejb</type>
      <version>0.0.1</version>
    </dependency>
    <dependency>
      <groupId>dcm4che.dcm4chee</groupId>
      <artifactId>dcm4chee-usr-dao</artifactId>
      <type>ejb</type>
      <version>0.0.1</version>
    </dependency>
    <dependency>
      <groupId>dcm4che.dcm4chee</groupId>
      <artifactId>dcm4chee-usr-wicket</artifactId>
      <type>jar</type>
      <version>0.0.1</version>
    </dependency>
    <dependency>
      <groupId>dcm4che.dcm4chee</groupId>
      <artifactId>dcm4chee-usr-web</artifactId>
      <type>war</type>
      <version>0.0.1</version>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-ear-plugin</artifactId>
        <version>2.4</version>
        <configuration>
          <defaultJavaBundleDir>lib</defaultJavaBundleDir>
          <modules>
            <ejbModule>
              <groupId>dcm4che.dcm4chee</groupId>
              <artifactId>dcm4chee-usr-entity</artifactId>
              <uri>lib/dcm4chee-usr-entity.jar</uri>
            </ejbModule>
            <ejbModule>
              <groupId>dcm4che.dcm4chee</groupId>
              <artifactId>dcm4chee-usr-dao</artifactId>
              <uri>lib/dcm4chee-usr-dao.jar</uri>
            </ejbModule>
            <jarModule>
              <groupId>dcm4che.dcm4chee</groupId>
              <artifactId>dcm4chee-usr-wicket</artifactId>
              <uri>lib/dcm4chee-usr-wicket.jar</uri>
            </jarModule>
            <webModule>
              <groupId>dcm4che.dcm4chee</groupId>
              <artifactId>dcm4chee-usr-web</artifactId>
              <contextRoot>/dcm4chee-usr-web</contextRoot>
              <bundleFileName>dcm4chee-usr-web.war</bundleFileName>
            </webModule>
          </modules>
          <jboss>
            <version>4</version>
          </jboss>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
