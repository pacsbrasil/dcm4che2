<project>
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>dcm4che</groupId>
		<artifactId>dcm4chee-xds</artifactId>
		<version>1.0.3</version>
	</parent>
	<groupId>dcm4che</groupId>
	<artifactId>dcm4chee-xds-dist</artifactId>
	<packaging>pom</packaging>
	<version>1.0.3</version>
	<name>Assemble Distribution for DCM4CHEE XDS Implementation</name>
	<dependencies>
		<dependency>
			<groupId>dcm4che</groupId>
			<artifactId>dcm4chee-xds-infoset-v30</artifactId>
			<version>1.0.3</version>
		</dependency>
		<dependency>
			<groupId>dcm4che</groupId>
			<artifactId>dcm4chee-xds-infoset-v21</artifactId>
			<version>1.0.3</version>
		</dependency>
		<dependency>
			<groupId>dcm4che</groupId>
			<artifactId>dcm4chee-docstore-store</artifactId>
			<version>1.0.3</version>
		</dependency>
		<dependency>
			<groupId>dcm4che</groupId>
			<artifactId>dcm4che-core</artifactId>
			<version>2.0.25</version>
		</dependency>
		<dependency>
			<groupId>dcm4che</groupId>
			<artifactId>dcm4che-audit</artifactId>
			<version>2.0.25</version>
		</dependency>
		<dependency>
			<groupId>dcm4che.dcm4chee</groupId>
			<artifactId>dcm4chee-audit-tomcat</artifactId>
			<version>2.15.0</version>
		</dependency>
		<dependency>
			<groupId>dcm4che</groupId>
			<artifactId>dcm4che-net</artifactId>
			<version>2.0.25</version>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-log4j12</artifactId>
			<version>1.6.1</version>
			<scope>provided</scope>
		</dependency>
	</dependencies>
	<build>
		<finalName>dcm4chee-xds-${version}</finalName>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<appendAssemblyId>false</appendAssemblyId>
					<descriptors>
						<descriptor>
							src/main/assembly/bin.xml
						</descriptor>
					</descriptors>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
