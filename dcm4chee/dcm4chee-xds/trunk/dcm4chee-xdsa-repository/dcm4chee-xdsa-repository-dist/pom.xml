<project>
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>dcm4che</groupId>
    <artifactId>dcm4chee-xdsa-repository</artifactId>
    <version>0.0.1-SNAPSHOT</version>
  </parent>
  <groupId>dcm4che</groupId>
  <artifactId>dcm4chee-xdsa-repository-dist</artifactId>
  <packaging>pom</packaging>
  <version>0.0.1-SNAPSHOT</version>
  <name>Assemble Distribution for XDS.a Repository</name>
  <dependencies>
    <dependency>
      <groupId>dcm4che</groupId>
	  <artifactId>dcm4che-core</artifactId>
	  <version>2.0.14</version>
    </dependency>
  </dependencies>
  <build>
    <finalName>dcm4chee-xdsa-repository-${version}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <appendAssemblyId>false</appendAssemblyId>
          <descriptors>
            <descriptor>src/main/assembly/bin.xml</descriptor>
          </descriptors>
        </configuration>
      </plugin>    
    </plugins>
  </build>
</project>
