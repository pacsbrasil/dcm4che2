<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE server>
<!-- $Id$ -->

<!-- ===================================================================== -->
<!--                                                                       -->
<!--  Printer Service Configuration                                        -->
<!--                                                                       -->
<!-- ===================================================================== -->

<server>

  <classpath codebase="lib" archives="@ARCHIVES@"/>

  <mbean code="com.tiani.prnscp.scp.PrintScpService" 
         name="dcm4chex:service=PrintSCP">    
    <depends optional-attribute-name="DcmServerName">
        dcm4chex:service=DcmServer,name=DCMSRV
    </depends>
    <depends optional-attribute-name="AuditLoggerName">
        dcm4chex:service=AuditLogger,name=AUDITLOG
    </depends>
    

    <!--
    Defines if an Audit Record shall be generated for each successful
    created Film Session Instance. Only AuditCreateSession OR AuditCreateFilmBox
    OR AuditPrintJob shall be set to true.
    -->
    <attribute name="AuditCreateSession">true</attribute>

    <!--
    Defines if an Audit Record shall be generated for each successful
    created Film Box Instance. Only AuditCreateSession OR AuditCreateFilmBox
    OR AuditPrintJob shall be set to true.
    -->
    <attribute name="AuditCreateFilmBox">false</attribute>

    <!--
    Defines if an Audit Record shall be generated for each scheduled
    Print Job. Generates usally one Audit Record for every printed page,
    because most Print SCUs request a separate Print Job for each page to print.
    Only AuditCreateSession OR AuditCreateFilmBox OR AuditPrintJob shall be
    set to true.
    -->
    <attribute name="AuditPrintJob">false</attribute>

    <!--
    Defines file containing license. Relative path names are resolved 
    using jboss server directory as base directory.
    -->
    <attribute name="LicenseFile">conf/license.p12</attribute>
    
    <!--
    Defines password for access to license file, specified by attribute LicenseFile 
    -->
    <attribute name="LicensePasswd">passwd</attribute>
    
    <!--
    Specifies spool directory used for buffering print jobs, before they can be
    forwarded to the printer.
    -->
    <attribute name="SpoolDirectory">tmp/spool</attribute>
    
    <!--
    Set to true, to keep spool files for debugging.
    -->
    <attribute name="KeepSpoolFiles">false</attribute>
  </mbean>
     
</server>

