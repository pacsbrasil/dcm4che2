<?xml version="1.0" encoding="UTF-8"?>
<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.dcm4chee.xero</groupId>
  <artifactId>installer</artifactId>
  <version>1.0-alpha.60</version>
  <name>Xero OSS Distribution</name>
  <packaging>pom</packaging>

  <build>
    <finalName>dcm4chee-xero-${version}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <appendAssemblyId>false</appendAssemblyId>
          <descriptors>
            <descriptor>src/main/assembly/bin.xml</descriptor>
          </descriptors>
        </configuration>
      </plugin>    
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.dcm4chee.xero</groupId>
      <artifactId>wado2-war</artifactId>
      <version>1.0-alpha.490</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>org.dcm4chee.xero</groupId>
      <artifactId>xero-war</artifactId>
      <version>1.0-alpha.279</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>batik</groupId>
      <artifactId>batik-transcoder</artifactId>
      <version>1.6-1</version>
    </dependency>
  </dependencies>

  <distributionManagement>
    <repository>
       <id>dcm4che</id>
       <name>Dcm4che maven2</name>
       <url>scp://www.dcm4che.org:443/home/maven2</url>
    </repository>
  </distributionManagement>
</project>
