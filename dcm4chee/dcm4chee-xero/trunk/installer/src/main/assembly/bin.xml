<assembly>
  <id>bin</id>
  <formats>
    <format>zip</format>
  </formats>
  <baseDirectory>xero-${version}</baseDirectory>
  <fileSets>
    <fileSet>
      <directory>src/main/resources</directory>
      <outputDirectory/>
      <includes>
        <include>*.txt</include>
        <include>bin/*.bat</include>
        <include>bin/*.cmd</include>
       </includes>
       <lineEnding>crlf</lineEnding>
    </fileSet>
    <fileSet>
      <directory>src/main/resources</directory>
      <outputDirectory/>
      <includes>
        <include>bin/*.sh</include>
      </includes>
      <lineEnding>lf</lineEnding>
      <fileMode>0755</fileMode>
    </fileSet>
    <fileSet>
      <directory>src/main/resources</directory>
      <outputDirectory/>
      <includes>
        <include>bin/run.conf</include>
      </includes>
     <lineEnding>lf</lineEnding>
    </fileSet>
    <fileSet>
      <directory>src/main/resources</directory>
      <outputDirectory/>
      <includes>
        <include>bin/*.exe</include>
        <include>bin/native/**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/resources</directory>
      <outputDirectory/>
      <includes>
         <include>licenses/**</include>
         <include>license.txt</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/resources</directory>
      <outputDirectory>server/default</outputDirectory>
      <includes>
        <include>conf/**</include>
        <include>lib/**</include>
        <include>deploy/**</include>
      </includes>
    </fileSet>

  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>server/default/lib</outputDirectory>
      <includes>
        <include>batik:batik-transcoder</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>server/default/deploy</outputDirectory>
      <outputFileNameMapping>xero.war</outputFileNameMapping>
      <includes>
        <include>org.dcm4chee.xero:xero-war</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>server/default/deploy</outputDirectory>
      <outputFileNameMapping>wado2.war</outputFileNameMapping>
      <includes>
        <include>org.dcm4chee.xero:wado2-war</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>server/default/lib</outputDirectory>
      <outputFileNameMapping>ejb-client.jar</outputFileNameMapping>
      <includes>
        <include>dcm4chee:ejb-client</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>server/default/lib</outputDirectory>
      <outputFileNameMapping>ejb-client2.jar</outputFileNameMapping>
      <includes>
        <include>dcm4chee:ejb-client2</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>
