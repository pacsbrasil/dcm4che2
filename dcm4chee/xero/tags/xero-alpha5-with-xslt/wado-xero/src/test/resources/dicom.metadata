# This metadata is for the dicom location, header and image reader components.

fileLocation=${class:org.dcm4chee.xero.metadata.filter.FilterList}
fileLocation.dicomFileLocation=${class:org.dcm4chee.xero.search.filter.DicomFileLocationFilter}
fileLocation.dicomFileLocation.priority=500

dicom=${class:org.dcm4chee.xero.metadata.filter.FilterList}
dicom.fileLocation=${ref:fileLocation}
dicom.fileLocation.priority=-1
dicom.dicom=${class:org.dcm4chee.xero.wado.DicomFilter}
dicom.dicom.priority=100
dicom.memcache=${class:org.dcm4chee.xero.metadata.filter.ParamSizeMemoryCacheFilter}
dicom.memcache.priority=200
dicom.memcache.queryStr=objectUID

wado=${class:org.dcm4chee.xero.metadata.filter.FilterList}
wado.fileLocation=${ref:fileLocation}
wado.fileLocation.priority=-1
wado.dicomHeader=${class:org.dcm4chee.xero.wado.DicomFilter}

image=${class:org.dcm4chee.xero.metadata.filter.FilterList}
image.fileLocation=${ref:fileLocation}
image.fileLocation.priority=-2
image.dicom=${ref:dicom}
image.dicom.priority=-1
image.image=${class:org.dcm4chee.xero.wado.DicomImageFilter}

wlimage.inherit=image
wlimage.wl=${class:org.dcm4chee.xero.wado.WLFilter}
wlimage.wl.priority=25

# wlfilter and encode use a fixed image encoding instead of reading actual data.
wlfilter=${class:org.dcm4chee.xero.metadata.filter.FilterList}
wlfilter.src=${class:org.dcm4chee.xero.wado.GradedWadoImage}
wlfilter.src.priority=0
wlfilter.wl=${class:org.dcm4chee.xero.wado.WLFilter}
wlfilter.wl.priority=15

encode=${class:org.dcm4chee.xero.metadata.filter.FilterList}
encode.encode=${class:org.dcm4chee.xero.wado.EncodeImage}
encode.encode.priority=1000
encode.wadoImg=${ref:wlfilter}
encode.wadoImg.priority=-1