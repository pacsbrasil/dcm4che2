<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>xero</artifactId>
    <groupId>org.dcm4chee.xero</groupId>
    <version>1.0.111</version>
  </parent>
  <groupId>org.dcm4chee.xero</groupId>
  <name>Xero View WAR Packaging</name>
  <artifactId>xero-war</artifactId>
  <packaging>war</packaging>

  <profiles>
     <profile>
        <id>devDeploy</id>
        <activation>
           <property><name>env.developmentServer</name></property>
        </activation>
        <build>
           <finalName>xero</finalName>

           <plugins>
              <plugin>
                 <artifactId>maven-antrun-plugin</artifactId>
                 <executions>

                    <execution>
                       <id>ViewCopy</id>
                       <phase>process-resources</phase>
                       <configuration>
                          <tasks>
                             <echo>Copying xero-war view to ${developmentServer} xero</echo>
                             <copy todir="${developmentServer}/server/default/deploy/xero.war" preserveLastModified="true">
                                <fileset dir="src/main/webapp" includes="**/*" />
                             </copy>
                          </tasks>
                       </configuration>
                       <goals><goal>run</goal></goals>
                    </execution>

                    <execution>
                       <id>WARCopy</id>
                       <phase>install</phase>
                       <configuration>
                          <tasks>
                             <echo>Deploying xero-war to ${developmentServer} xero</echo>
                             <copy todir="${developmentServer}/server/default/deploy/xero.war" preserveLastModified="true">
                                <fileset dir="target/xero" includes="**/*" />
                             </copy>
			     <echo>Hudson-External-Artifact: xero.war=https://hap.mitra.com/maven-repository/org/dcm4chee/xero/xero-war/${project.version}/xero-war-${project.version}.war</echo>
                          </tasks>
                       </configuration>
                       <goals><goal>run</goal></goals>
                    </execution>
                 </executions>
              </plugin>
           </plugins>
        </build>
     </profile>
  </profiles>

  <build><finalName>xero</finalName></build>
  
  <dependencies>
    <dependency>
      <groupId>org.dcm4chee.xero</groupId>
      <artifactId>controller-xero</artifactId>
      <version>1.0.111</version>
    </dependency>
  </dependencies>
</project>
