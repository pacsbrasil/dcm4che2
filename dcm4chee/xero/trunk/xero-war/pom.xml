<?xml version="1.0"?><project>
  <parent>
    <artifactId>xero</artifactId>
    <groupId>org.dcm4chee.xero</groupId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>xero-war</artifactId>
  <packaging>war</packaging>
  <name>xero-war</name>
  <build>
    <finalName>xero</finalName>
    <plugins>
      <plugin>
         <artifactId>maven-war-plugin</artifactId>
         <configuration>
           <!-- This is broken in maven-war-plugin 2.0, works in 2.0.1 -->
           <warSourceExcludes>WEB-INF/lib/myfaces*.jar</warSourceExcludes>
         </configuration>       
      </plugin>
      <plugin>
        <groupId>de.berlios.jsunit</groupId>
        <artifactId>jsunit-maven2-plugin</artifactId>
        <executions>
            <execution>
                <id>test</id>
                <configuration>
                   <sourceDirectory>src/main/webapp</sourceDirectory>
                   <sources>
                      <source>js/TestBrowser.js</source>
                      <source>js/Events.js</source>
                      <source>js/LookAheadImage.js</source>
                      <source>image/cine.js</source>
                   </sources>
                   <testSuites>
                      <testSuite>
                         <name>AllTests</name>
                         <includes>
                           <include>lib/ajax.js</include>
                           <include>FileIO.js</include>
                           <include>BrowserMock.js</include>
                           <include>image/LookAheadTest.js</include>
                         </includes>
                     </testSuite>
                   </testSuites>
                </configuration>
                <goals>
                  <goal>jsunit-test</goal>
                </goals>
            </execution>
        </executions>
     </plugin>
    </plugins>    
  </build>
  <dependencies>
    <dependency>
      <groupId>org.jboss.seam</groupId>
      <artifactId>jboss-seam-debug</artifactId>
      <version>1.2.1.GA</version>
    </dependency>
    <dependency>
      <groupId>org.jboss.seam</groupId>
      <artifactId>jboss-seam-ui</artifactId>
      <version>1.2.1.GA</version>
    </dependency>
    <dependency>
      <groupId>com.sun.facelets</groupId>
      <artifactId>jsf-facelets</artifactId>
      <version>1.1.12</version>
    </dependency>
    <dependency>
      <groupId>org.apache.myfaces.core</groupId>
      <artifactId>myfaces-api</artifactId>
      <version>1.1.4</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
      <version>2.4</version>
      <scope>provided</scope>
    </dependency>
    
    <dependency>
      <groupId>org.dcm4chee.xero</groupId>
      <artifactId>xero-core</artifactId>
      <version>1.0-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.dcm4chee.xero</groupId>
      <artifactId>metadata</artifactId>
      <version>1.0-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
</project>
