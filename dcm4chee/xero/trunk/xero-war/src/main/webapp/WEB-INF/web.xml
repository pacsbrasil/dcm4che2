<?xml version="1.0" ?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">

   <context-param>
      <param-name>javax.faces.CONFIG_FILES</param-name>
      <param-value>/WEB-INF/navigation.xml</param-value>
   </context-param>

   <context-param>
     <param-name>com.sun.faces.validateXml</param-name>
     <param-value>true</param-value>
     <description>Validate the faces-config.xml file against the DTD</description>
   </context-param>
   
	<context-param>
	  <param-name>facelets.SKIP_COMMENTS</param-name>
	  <param-value>true</param-value>
	</context-param>
	
   <listener>
      <listener-class>org.jboss.seam.servlet.SeamListener</listener-class>
   </listener>

   <!-- For RSF 1.2 -->
   <listener>
      <listener-class>com.sun.faces.config.ConfigureListener</listener-class>
   </listener>

   <context-param>
      <param-name>facelets.DEVELOPMENT</param-name>
      <param-value>true</param-value>
   </context-param>
    
   <context-param>
      <param-name>javax.faces.DEFAULT_SUFFIX</param-name>
      <param-value>.xhtml</param-value>
   </context-param>

   <filter>
      <filter-name>XsltFilter</filter-name>
      <filter-class>org.dcm4chee.xero.servlet.XsltFilter</filter-class>
   </filter>
   
   <filter>
      <filter-name>TimeFilter</filter-name>
      <filter-class>org.dcm4chee.xero.servlet.TimeFilter</filter-class>
   </filter>

   <filter>
      <filter-name>MaxAgeFilter</filter-name>
      <filter-class>org.dcm4chee.xero.servlet.MaxAgeFilter</filter-class>
      <init-param>
	      <param-name>maxAge</param-name>
    	  <param-value>500</param-value>
      </init-param>
   </filter>

   <filter>
      <filter-name>LongMaxAgeFilter</filter-name>
      <filter-class>org.dcm4chee.xero.servlet.MaxAgeFilter</filter-class>
      <init-param>
	      <param-name>maxAge</param-name>
    	  <param-value>3600</param-value>
      </init-param>
   </filter>
   
   <filter>
      <filter-name>PublicLongMaxAgeFilter</filter-name>
      <filter-class>org.dcm4chee.xero.servlet.MaxAgeFilter</filter-class>
      <init-param>
	      <param-name>maxAge</param-name>
    	  <param-value>36000</param-value>
      </init-param>
      <!-- Don't set this right now - seems to cause browsers not to cache this 
      <init-param>
	      <param-name>privacy</param-name>
    	  <param-value>public</param-value>
      </init-param>
      -->
   </filter>
   
   <filter>
      <filter-name>XmlContentFilter</filter-name>
      <filter-class>org.dcm4chee.xero.servlet.ContentTypeFilter</filter-class>
      <init-param>
	      <param-name>contentType</param-name>
    	  <param-value>text/xml</param-value>
      </init-param>
   </filter>

   <filter>
      <filter-name>HtmlContentFilter</filter-name>
      <filter-class>org.dcm4chee.xero.servlet.ContentTypeFilter</filter-class>
      <init-param>
	      <param-name>contentType</param-name>
    	  <param-value>text/html</param-value>
      </init-param>
   </filter>

   <filter>
      <filter-name>SvgContentFilter</filter-name>
      <filter-class>org.dcm4chee.xero.servlet.ContentTypeFilter</filter-class>
      <init-param>
	      <param-name>contentType</param-name>
    	  <param-value>image/svg+xml</param-value>
      </init-param>
   </filter>

   <filter>
      <filter-name>XslContentFilter</filter-name>
      <filter-class>org.dcm4chee.xero.servlet.ContentTypeFilter</filter-class>
      <init-param>
	      <param-name>contentType</param-name>
    	  <param-value>application/xml</param-value>
      </init-param>
   </filter>

   <filter-mapping>
      <filter-name>TimeFilter</filter-name>
      <url-pattern>/*</url-pattern>
   </filter-mapping>
   
   <filter-mapping>
      <filter-name>XmlContentFilter</filter-name>
      <url-pattern>*.xml</url-pattern>
   </filter-mapping>
   
   <filter-mapping>
      <filter-name>XmlContentFilter</filter-name>
      <url-pattern>*.seam</url-pattern>
   </filter-mapping>
   
   <filter-mapping>
      <filter-name>SvgContentFilter</filter-name>
      <url-pattern>*.svg</url-pattern>
   </filter-mapping>

   <filter-mapping>
     <filter-name>XsltFilter</filter-name>
     <url-pattern>*.seam</url-pattern>
   </filter-mapping>

   <!-- XSL pages need to take at least a short while to time out. -->
   <filter-mapping>
      <filter-name>MaxAgeFilter</filter-name>
      <url-pattern>*.xml</url-pattern>
   </filter-mapping>

   <filter-mapping>
      <filter-name>PublicLongMaxAgeFilter</filter-name>
      <url-pattern>*.xsl</url-pattern>
      <url-pattern>*.png</url-pattern>
      <url-pattern>*.css</url-pattern>
   </filter-mapping>

   <!-- JSF and Facelets Configuration -->    
   <servlet>
      <servlet-name>Faces Servlet</servlet-name>
      <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
      <load-on-startup>1</load-on-startup>
   </servlet>
    
   <servlet-mapping>
      <servlet-name>Faces Servlet</servlet-name>
      <url-pattern>*.seam</url-pattern>
   </servlet-mapping>
    
   <servlet-mapping>
      <servlet-name>Faces Servlet</servlet-name>
      <url-pattern>*.action</url-pattern>
   </servlet-mapping>
    
   <servlet-mapping>
      <servlet-name>Faces Servlet</servlet-name>
      <url-pattern>*.xsl</url-pattern>
   </servlet-mapping>
   <filter-mapping>
      <filter-name>XslContentFilter</filter-name>
      <url-pattern>*.xsl</url-pattern>
   </filter-mapping>
   
   
   <security-constraint>
     <display-name>Xero Security Constraint</display-name>
     <web-resource-collection>
       <web-resource-name>dispatcher</web-resource-name>
       <description>Only allows users with the role WebUser to access Xero.</description>
       <url-pattern>*.seam</url-pattern>
       <url-pattern>*.xhtml</url-pattern>
       <http-method>GET</http-method>
       <http-method>POST</http-method>
     </web-resource-collection>
     <auth-constraint>
       <role-name>WebUser</role-name>
     </auth-constraint>
   </security-constraint>
   
   <login-config>
      <auth-method>FORM</auth-method>
      <realm-name>Archive Web Admin</realm-name>
      <form-login-config>
	      <form-login-page>/login.jsp</form-login-page>
	      <form-error-page>/error.jsp</form-error-page>
	  </form-login-config>
   </login-config>

   <security-role>
      <role-name>WebUser</role-name>
   </security-role>
   <security-role>
      <role-name>Doctor</role-name>
   </security-role>
   <security-role>
      <role-name>WebAdmin</role-name>
   </security-role>
</web-app>
