<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
     <groupId>org.dcm4chee.xero</groupId>
     <artifactId>xero</artifactId>
     <version>1.0-SNAPSHOT</version>
  </parent>
  <artifactId>xero-ear</artifactId>
  <packaging>ear</packaging>
  <name>xero-ear</name>
  <description>Overall ear project for a xero installation.  Add dependencies here to be included in a specific version of the build as needed.</description>

<build>
    <finalName>xero</finalName>


    <plugins>
      <plugin>
         <groupId>org.codehaus.cargo</groupId>
         <artifactId>cargo-maven2-plugin</artifactId>
         <configuration>
            <properties>
               <cargo.remote.username>admin</cargo.remote.username>
               <cargo.remote.password>admin</cargo.remote.password>
            </properties>
            <container>
               <containerId>jboss4x</containerId>
               <type>remote</type>
            </container>
         </configuration>
      </plugin>
    
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-ear-plugin</artifactId>
        <configuration>
           <earSourceDirectory>src/main/resources</earSourceDirectory>
           <modules>
              <jarModule>
                <groupId>org.dcm4chee.xero</groupId>
                <artifactId>xero-cfind</artifactId>
                <includeInApplicationXml>true</includeInApplicationXml>
             </jarModule>
             <!--
             <jarModule>
                <groupId>javax.el</groupId>
                <artifactId>el-ri</artifactId>
                <includeInApplicationXml>true</includeInApplicationXml>
             </jarModule>
             <jarModule>
                <groupId>javax.el</groupId>
                <artifactId>el-ri</artifactId>
                <includeInApplicationXml>true</includeInApplicationXml>
             </jarModule>
             -->
             <webModule>
               <groupId>org.dcm4chee.xero</groupId>
               <artifactId>xero-war</artifactId>
               <contextRoot>/xero</contextRoot>
             </webModule>
             <jarModule>
               <groupId>org.dcm4chee.xero</groupId>
               <artifactId>metadata</artifactId>
               <includeInApplicationXml>true</includeInApplicationXml>
            </jarModule>
            <jarModule>
               <groupId>org.jboss.seam</groupId>
               <artifactId>jboss-seam</artifactId>
               <includeInApplicationXml>true</includeInApplicationXml>
            </jarModule>
            <jarModule>
	      <groupId>dcm4che</groupId>
	      <artifactId>dcm4che-core</artifactId>
              <includeInApplicationXml>true</includeInApplicationXml>
            </jarModule>
            <jarModule>
	      <groupId>dcm4che</groupId>
	      <artifactId>dcm4che-net</artifactId>
              <includeInApplicationXml>true</includeInApplicationXml>
            </jarModule>
            <jarModule>
 	      <groupId>dcm4che</groupId>
	      <artifactId>dcm4che-iod</artifactId>
              <includeInApplicationXml>true</includeInApplicationXml>
            </jarModule>
            <jarModule>
              <groupId>org.slf4j</groupId>
              <artifactId>slf4j-log4j12</artifactId>
              <includeInApplicationXml>true</includeInApplicationXml>
            </jarModule>
            <jarModule>
              <groupId>org.slf4j</groupId>
              <artifactId>slf4j-api</artifactId>
              <includeInApplicationXml>true</includeInApplicationXml>
            </jarModule>
          </modules>
        </configuration>
      </plugin>

    </plugins>
  </build>

  <dependencies>
     <dependency>
        <groupId>org.dcm4chee.xero</groupId>
        <artifactId>metadata</artifactId>
        <version>1.0-SNAPSHOT</version>
        <type>jar</type>
     </dependency>
     <dependency>
        <groupId>org.dcm4chee.xero</groupId>
        <artifactId>xero-core</artifactId>
        <version>1.0-SNAPSHOT</version>
        <type>ejb</type>
     </dependency>
     <dependency>
        <groupId>org.dcm4chee.xero</groupId>
        <artifactId>xero-cfind</artifactId>
        <version>1.0-SNAPSHOT</version>
     </dependency>
     <dependency>
        <groupId>org.dcm4chee.xero</groupId>
        <artifactId>xero-war</artifactId>
        <version>1.0-SNAPSHOT</version>
        <type>war</type>
     </dependency>
     <dependency>
        <groupId>javax.el</groupId>
        <artifactId>el-ri</artifactId>
        <version>1.2</version>
        <type>jar</type>
     </dependency>
     <dependency>
        <groupId>javax.el</groupId>
        <artifactId>el-api</artifactId>
        <version>1.2</version>
        <type>jar</type>
     </dependency>
     <dependency>
      <groupId>dcm4che</groupId>
      <artifactId>dcm4che-core</artifactId>
      <version>2.0.12-SNAPSHOT</version>
      <type>jar</type>
     </dependency>
     <dependency>
      <groupId>dcm4che</groupId>
      <artifactId>dcm4che-iod</artifactId>
      <version>2.0.12-SNAPSHOT</version>
      <type>jar</type>
     </dependency>    
     <dependency>
      <groupId>dcm4che</groupId>
      <artifactId>dcm4che-net</artifactId>
      <version>2.0.12-SNAPSHOT</version>
      <type>jar</type>
     </dependency>    
     <dependency>
        <groupId>org.slf4j</groupId>
        <artifactId>slf4j-api</artifactId>
        <version>1.1.0</version>
     </dependency>
     <dependency>
        <groupId>org.slf4j</groupId>
        <artifactId>slf4j-log4j12</artifactId>
        <version>1.1.0</version>
     </dependency>
     <dependency>
        <groupId>log4j</groupId>
        <artifactId>log4j</artifactId>
        <version>1.2.13</version>
        <scope>provided</scope>
     </dependency>
  </dependencies>
</project>
