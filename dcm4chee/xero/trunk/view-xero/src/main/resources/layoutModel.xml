<layout
  xmlns:m="http://www.dcm4che.org/xero/metadata/model" 
  m:layout="${class:org.dcm4chee.xero.model.XmlModel}"
  m:layout.resource="layout.xml"
>
	<!-- Contains an object defining the current patient -->
	<patient type="Patient" />
	
	<!-- Contains a list of the currently displaying studies -->
	<studies type="Studies">
		<keyObject type="KeyObject">
		</keyObject>
		
		<series type="Series" >
			<thumbnail type="Image" />
			<report type="Report" />
		</series>
	</studies>
	
	<!-- Contains the current primary study -->
	<current type="Study" />
	
	<!-- Contains the priors for the current primary -->
	<priors type="Studies" />
	
	<!-- Defines the views to use, and includes grouping by rows to allow displaying an entire row of images boxes. -->
	<views type="Views">
		<!-- Contains the presentation state objects for all images in the view -->
		<presentationState type="PresentationState" />
		
		<!-- Contains all the rows of views - it is entirely possible that there are none or only 1 view. -->
		<viewRow type="RowView">
			<imageBox type="ImageBox" first="boolean" width="int" height="int">
				<series type="Series" />
				<image type="Image" />
			</imageBox>
		</viewRow>
	</views>
		
</layout>