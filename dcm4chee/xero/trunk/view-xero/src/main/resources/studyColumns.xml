<headers 
  xmlns:m="http://www.dcm4che.org/xero/metadata/model" 
  m:studyColumns="${class:org.dcm4chee.xero.model.XmlModel}"
  m:studyColumns.resource="studyColumns.xml"
>
  
  <header name="Patient Name" var="PatientName" template="image/patientNameSel" action="controller.sortQuery"/>
  <header name="Patient ID" var="PatientID"  template="html/displayFirst" action="controller.sortQuery"/>
  <header name="Study Description" var="StudyDescription"  template="image/studyDescriptionSel" action="controller.sortQuery"/>
  <header name="Modality" var="ModalitiesInStudy"  template="html/displayIt" action="controller.sortQuery"/>
  <header name="Acc#" var="AccessionNumber"  template="html/displayIt" action="controller.sortQuery"/>
  <header name="Study Date/Time" var="StudyDateTime"  template="html/displayIt" action="controller.sortQuery"/>
  <header name="# Series" var="NumberOfStudyRelatedSeries"  template="html/displayIt" action="controller.sortQuery"/>
  <header name="# Objects" var="NumberOfStudyRelatedInstances"  template="html/displayIt" action="controller.sortQuery"/>
    
</headers>