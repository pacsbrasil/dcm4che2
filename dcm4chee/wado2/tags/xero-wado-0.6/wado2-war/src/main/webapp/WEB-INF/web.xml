<?xml version="1.0" ?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">


   <!-- WADO servlet to use for testing window levelling performance. -->
   <servlet>
     <servlet-name>WADO</servlet-name>
      <servlet-class>org.dcm4chee.xero.metadata.servlet.MetaDataServlet</servlet-class>
      <init-param>
	      <param-name>metaData</param-name>
    	  <param-value>/xero-cfind.metadata</param-value>
      </init-param>
      <init-param>
	      <param-name>filter</param-name>
    	  <param-value>wado</param-value>
      </init-param>
   </servlet>
   <servlet-mapping>
     <servlet-name>WADO</servlet-name>
     <url-pattern>/wado</url-pattern>
   </servlet-mapping>

   <servlet>
     <servlet-name>CFind</servlet-name>
      <servlet-class>org.dcm4chee.xero.metadata.servlet.MetaDataServlet</servlet-class>
      <init-param>
	      <param-name>metaData</param-name>
    	  <param-value>/xero-cfind.metadata</param-value>
      </init-param>
      <init-param>
	      <param-name>filter</param-name>
    	  <param-value>cfind</param-value>
      </init-param>
   </servlet>
   <servlet-mapping>
     <servlet-name>CFind</servlet-name>
     <url-pattern>/cfind</url-pattern>
   </servlet-mapping>
   
   <servlet>
      <servlet-name>Study Xml Servlet</servlet-name>
      <servlet-class>org.dcm4chee.xero.metadata.servlet.MetaDataServlet</servlet-class>
      <init-param>
	      <param-name>metaData</param-name>
    	  <param-value>/xero-cfind.metadata</param-value>
      </init-param>
      <init-param>
	      <param-name>filter</param-name>
    	  <param-value>studyFilter</param-value>
      </init-param>
      <load-on-startup>1</load-on-startup>      
   </servlet>
   <servlet-mapping>
      <servlet-name>Study Xml Servlet</servlet-name>
      <url-pattern>/study.xml</url-pattern>
   </servlet-mapping>

   <servlet>
      <servlet-name>Image Xml Servlet</servlet-name>
      <servlet-class>org.dcm4chee.xero.metadata.servlet.MetaDataServlet</servlet-class>
      <init-param>
	      <param-name>metaData</param-name>
    	  <param-value>/xero-cfind.metadata</param-value>
      </init-param>
      <init-param>
	      <param-name>filter</param-name>
    	  <param-value>imageFilter</param-value>
      </init-param>
      <load-on-startup>1</load-on-startup>      
   </servlet>
   <servlet-mapping>
      <servlet-name>Image Xml Servlet</servlet-name>
      <url-pattern>/image.xml</url-pattern>
   </servlet-mapping>

   <servlet>
      <servlet-name>Series Xml Servlet</servlet-name>
      <servlet-class>org.dcm4chee.xero.metadata.servlet.MetaDataServlet</servlet-class>
      <init-param>
	      <param-name>metaData</param-name>
    	  <param-value>/xero-cfind.metadata</param-value>
      </init-param>
      <init-param>
	      <param-name>filter</param-name>
    	  <param-value>seriesFilter</param-value>
      </init-param>
      <load-on-startup>1</load-on-startup>      
   </servlet>
   <servlet-mapping>
      <servlet-name>Series Xml Servlet</servlet-name>
      <url-pattern>/series.xml</url-pattern>
   </servlet-mapping>
   
   <filter>
      <filter-name>TimeFilter</filter-name>
      <filter-class>org.dcm4chee.xero.servlet.TimeFilter</filter-class>
   </filter>
   <filter-mapping>
      <filter-name>TimeFilter</filter-name>
      <url-pattern>/*</url-pattern>
   </filter-mapping>
   
   <security-constraint id="securityConstraint">
     <display-name>Xero Security Constraint</display-name>
     <web-resource-collection>
       <web-resource-name>dispatcher</web-resource-name>
       <description>Only allows users with the role WebUser to access Xero.</description>
       <url-pattern>*.xml</url-pattern>
       <url-pattern>/wado</url-pattern>
       <url-pattern>/cfind</url-pattern>
       <http-method>GET</http-method>
       <http-method>POST</http-method>
     </web-resource-collection>
     <auth-constraint>
       <role-name>WebUser</role-name>
     </auth-constraint>
   </security-constraint>
   
   <login-config id="loginConfig">
      <auth-method>FORM</auth-method>
      <realm-name>Archive Web Admin</realm-name>
      <form-login-config>
	      <form-login-page>/login.jsp</form-login-page>
	      <form-error-page>/error.jsp</form-error-page>
	  </form-login-config>
   </login-config>

   <security-role>
      <role-name>WebUser</role-name>
   </security-role>
   <security-role>
      <role-name>WebAdmin</role-name>
   </security-role>
</web-app>
