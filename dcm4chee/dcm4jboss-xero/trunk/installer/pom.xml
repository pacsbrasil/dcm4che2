<?xml version="1.0" encoding="UTF-8"?>
<project>
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.dcm4chee.xero</groupId>
    <artifactId>dcm4jboss-xero</artifactId>
    <version>0.8-SNAPSHOT</version>
  </parent>
  <groupId>org.dcm4chee.xero</groupId>
  <name>Xero OSS Installer</name>
  <artifactId>installer</artifactId>

  <build>
     <plugins>
        <plugin>
           <artifactId>maven-dependency-plugin</artifactId>
           <executions>
              <execution>
                 <id>copyXeroWar</id>
                 <phase>process-resources</phase>
                 <goals>
                    <goal>copy</goal>
                  </goals>
                  <configuration>
                     <artifactItems>
                        <artifactItem>
                           <groupId>org.dcm4chee.xero</groupId>
                           <artifactId>wado2-war</artifactId>
                           <version>${project.version}</version>
                           <type>war</type>
                           <outputDirectory>target/classes/server/default/deploy</outputDirectory>
                           <destFileName>wado2.war</destFileName>
                        </artifactItem>
                        <artifactItem>
                           <groupId>org.dcm4chee.xero</groupId>
                           <artifactId>xero-war</artifactId>
                           <version>${project.version}</version>
                           <type>war</type>
                           <outputDirectory>target/classes/server/default/deploy</outputDirectory>
                           <destFileName>xero.war</destFileName>
                        </artifactItem>
                     </artifactItems>
                  </configuration>
               </execution>
            </executions>
         </plugin>
      </plugins>
   </build>

  <dependencies>
    <dependency>
      <groupId>org.dcm4chee.xero</groupId>
      <artifactId>wado2-war</artifactId>
      <version>${project.version}</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>org.dcm4chee.xero</groupId>
      <artifactId>xero-war</artifactId>
      <version>${project.version}</version>
      <type>war</type>
    </dependency>
  </dependencies>
</project>
