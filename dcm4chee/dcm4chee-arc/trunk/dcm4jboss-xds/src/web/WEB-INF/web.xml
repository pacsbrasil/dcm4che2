<web-app>
	<display-name>dcm4jboss XDS Repository</display-name>

	<servlet>
		<servlet-name>XDSRepository</servlet-name>
		<display-name>DCM4JBOSS XDS Repository</display-name>
		<servlet-class>org.dcm4chex.xds.repository.web.XDSRepositoryServlet</servlet-class>
		<init-param>
			<param-name>xdsServiceName</param-name>
			<param-value>dcm4jboss.archive:service=XDSService</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>XDSRepository</servlet-name>
		<url-pattern>/XDSRepository/*</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>

