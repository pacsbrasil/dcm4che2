<project name="dcm4jboss-web" default="war">

	<property file="build.properties"/>

	<!-- Override with your JBoss dist location -->
	<property name="jboss.home" value="${user.home}/jboss-4.0.3SP1" />
	<property name="jboss.lib.dir" value="${jboss.home}/lib"/>
	<property name="jboss-jmx.jar" value="${jboss.lib.dir}/jboss-jmx.jar"/>
	<property name="jboss.server.lib.dir" value="${jboss.home}/server/default/lib"/>
	<property name="log4j.jar" value="${jboss.server.lib.dir}/log4j.jar"/>
	<property name="j2ee.jar" value="${jboss.server.lib.dir}/jboss-j2ee.jar"/>
	<property name="servlet-api.jar" value="${jboss.server.lib.dir}/javax.servlet.jar"/>

	<!-- Override with your Maverick dist location -->
	<property name="maverick.home" value="../maverick" />
	<property name="maverick.lib.dir" value="${maverick.home}/lib"/>
	<property name="maverick.dist.dir" value="${maverick.home}/dist"/>
	<property name="maverick.jar" value="${maverick.dist.dir}/maverick.jar"/>
	<property name="commons-beanutils.jar" value="${maverick.lib.dir}/commons-beanutils.jar"/>

	<!-- Override with your Domify dist location -->
	<property name="opt-domify.home" value="../opt-domify" />
	<property name="opt-domify.dist.dir" value="${opt-domify.home}/dist"/>
	<property name="opt-domify.lib.dir" value="${opt-domify.home}/lib"/>

    <!-- Override with your dcm4che dist location -->
	<property name="dcm4che.home" value="../dcm4che14/build"/>		
	<property name="dcm4che.jar" value="${dcm4che.home}/lib/dcm4che.jar"/>		

	<!-- Override with your dcm4jboss-ejb working directory -->
	<property name="dcm4jboss-ejb.home" value="../dcm4jboss-ejb"/>		
	<property name="dcm4jboss-ejb.target" value="${dcm4jboss-ejb.home}/target"/>		
	<property name="dcm4jboss-ejb-client.jar" value="${dcm4jboss-ejb.target}/common/lib/dcm4jboss-ejb-client.jar" />
	<!-- TODO dependence should be eliminated -->
	<property name="dcm4jboss-jdbc-hsql.jar" value="${dcm4jboss-ejb.target}/hsql/lib/dcm4jboss-jdbc-hsql.jar" />

	<!-- Override with your dcm4jboss-sar working directory -->
	<property name="dcm4jboss-sar.home" value="../dcm4jboss-sar" />
	<property name="dcm4jboss.jar" value="${dcm4jboss-sar.home}/target/lib/dcm4jboss.jar" />
	
	<property name="deploy.root" value="${jboss.home}/server/pacs"/>
	<property name="war.deploy.dir" value="${deploy.root}/deploy"/>
	<property name="conf.deploy.dir" value="${deploy.root}/conf"/>
	
	<property name="target.dir" value="target"/>
	<property name="file" value="${ant.project.name}.war"/>
	<property name="product" value="${target.dir}/deploy/${file}"/>

	<property name="javasrc.dir" value="src/java"/>
	<property name="classes.dir" value="${target.dir}/classes"/>
	<property name="web.dir" value="src/web"/>
	<property name="etc.dir" value="src/etc"/>

	<path id="master-classpath">
		<pathelement location="${jboss-jmx.jar}"/>
		<pathelement location="${servlet-api.jar}"/>
		<pathelement location="${j2ee.jar}"/>
		<pathelement location="${log4j.jar}"/>
		<pathelement location="${maverick.jar}"/>
		<pathelement location="${commons-beanutils.jar}"/>
		<pathelement location="${dcm4che.jar}"/>
		<pathelement location="${dcm4jboss-ejb-client.jar}"/>
		<pathelement location="${dcm4jboss.jar}"/>
	<!-- TODO dependence should be eliminated -->
		<pathelement location="${dcm4jboss-jdbc-hsql.jar}"/>
	</path>

	<property name="debug" value="on"/>
	<property name="deprecation" value="on"/>


	<target name="clean">
		<delete dir="${target.dir}"/>
	</target>

 	<target name="classes">
		<mkdir dir="${classes.dir}"/>
		
		<javac debug="${debug}" deprecation="${deprecation}" destdir="${classes.dir}" srcdir="${javasrc.dir}">
			<classpath refid="master-classpath"/>
		</javac>
	</target>

	<target name="war" depends="classes">
		<mkdir dir="${target.dir}/deploy/"/>
		<war warfile="${product}" webxml="${web.dir}/WEB-INF/web.xml">
			<fileset dir="${web.dir}">
				<exclude name="WEB-INF/web.xml" />
			</fileset>
			
			<classes dir="${classes.dir}">
				<include name="org/**/*.class" />
			</classes>

			<lib dir="${maverick.dist.dir}">
				<include name="maverick.jar" />
			</lib>
			<lib dir="${maverick.lib.dir}">
				<include name="commons-beanutils.jar" />
				<include name="commons-collections.jar" />
				<include name="jdom.jar" />
			</lib>
			<lib dir="${opt-domify.lib.dir}">
				<include name="domify.jar" />
			</lib>
			<lib dir="${opt-domify.dist.dir}">
				<include name="opt-domify.jar" />
			</lib>
		</war>
	</target>

	<target name="deploy" depends="war,deploy-only,deploy-conf"/>
	
	<target name="deploy-only">
		<copy file="${product}" todir="${war.deploy.dir}" />
	</target>
	<target name="deploy-conf">
		<copy todir="${conf.deploy.dir}" >
			<fileset dir="${etc.dir}/conf" includes="**" />
		</copy>
	</target>

	
</project>