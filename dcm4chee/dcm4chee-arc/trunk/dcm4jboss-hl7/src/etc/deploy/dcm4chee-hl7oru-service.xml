<?xml version="1.0" encoding="UTF-8"?>
<!-- $Id$ -->
<server>
  <classpath codebase="lib" archives="dcm4chee-hl7.jar"/>
  <mbean code="org.dcm4chex.archive.hl7.ORUService"
    name="dcm4chee.archive:service=HL7Service,type=ORU"
    xmbean-dd="xmdesc/dcm4chee-hl7oru-xmbean.xml">
    <depends optional-attribute-name="HL7ServerName"
      >dcm4chee.archive:service=HL7Server</depends>
    <depends optional-attribute-name="ExportManagerName"
      >dcm4chee.archive:service=ExportManager</depends>
    <depends optional-attribute-name="TemplatesServiceName"
      >dcm4chee.archive:service=Templates</depends>
      <!-- depends on all HL7 services to ensure that all HL7 services are started when HL7 Server is started by this service! -->
    <depends>dcm4chee.archive:service=HL7Service,type=ORM</depends>
    <depends>dcm4chee.archive:service=HL7Service,type=ADT</depends>
    <depends>dcm4chee.archive:service=HL7Service,type=MDM</depends>
    <depends>dcm4chee.archive:service=HL7Cmd</depends>
    <depends>dcm4chee.archive:service=Prefetch</depends>
    <depends>dcm4chee.archive:service=StudyPermission</depends>
  </mbean>
</server>
