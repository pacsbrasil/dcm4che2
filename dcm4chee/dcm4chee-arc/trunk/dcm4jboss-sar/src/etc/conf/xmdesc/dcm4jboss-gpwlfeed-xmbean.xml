<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mbean PUBLIC
   "-//JBoss//DTD JBOSS XMBEAN 1.1//EN"
   "http://www.jboss.org/j2ee/dtd/jboss_xmbean_1_1.dtd">

<mbean>
   <description>GPWL Feed Service to add workitems into General Purpose Worklist
     triggered by received MPPS N-SET messages.
   </description>

   <descriptors>
      <persistence persistPolicy="OnUpdate" />
      <persistence-manager value="org.jboss.mx.persistence.DelegatingPersistenceManager" />
   </descriptors>

   <class>org.dcm4chex.archive.dcm.gpwlscp.GPWLFeedService</class>

   <constructor>
      <description>The default constructor</description>
      <name>GPWLFeedService</name>
   </constructor>

   <!-- Attributes -->
   <attribute access="read-write"
      getMethod="getEjbProviderURL"
      setMethod="setEjbProviderURL">
      <description>Identifies JNDI (e.g: jnp://hostname:1099) with EJBs.
      "LOCAL", if EJBs are deployed in same JBoss instance.
      </description>
      <name>EjbProviderURL</name>
      <type>java.lang.String</type>
      <descriptors>
         <value value="LOCAL" />
      </descriptors>
   </attribute>
   <attribute access="read-write"
      getMethod="getMppsScpServiceName"
      setMethod="setMppsScpServiceName">
      <description>Used internally - do NOT modify.
      </description>
      <name>MppsScpServiceName</name>
      <type>javax.management.ObjectName</type>
      <descriptors>
         <value value="tiani.archive:service=MPPSScp" />
      </descriptors>
   </attribute>
   <attribute access="read-write"
      getMethod="getTemplateURL"
      setMethod="setTemplateURL">
      <description>URL to directory of worklist item templates.
      </description>
      <name>TemplateURL</name>
      <type>java.lang.String</type>
      <descriptors>
         <value value="gpwl" />
      </descriptors>
   </attribute>
   <attribute access="read-write"
      getMethod="getTemplates"
      setMethod="setTemplates">
      <description>List of templates for worklist entries.
      </description>
      <name>TemplateList</name>
      <type>java.lang.String</type>
      <descriptors>
         <value value="wl1.tpl^Worklist1,wl2.tpl^Worklist2" />
      </descriptors>
   </attribute>
   <attribute access="read-write"
      getMethod="getHumanPerformer"
      setMethod="setHumanPerformer">
      <description>List of human performer for a worklist entry.
      </description>
      <name>HumanPerformerList</name>
      <type>java.lang.String</type>
      <descriptors>
         <value value="doc1^PACS_TIANI^Dr. Allis,doc2^HUGO^Dr. Suse" />
      </descriptors>
   </attribute>
   &defaultAttributes;

   <!-- Operations -->
    <operation impact="ACTION">
      <description>add new general purpose worklist entry.
      </description>
      <name>addWorklistItem</name>
      <parameter>
        <description>study pk</description>
        <name>studyPk</name>
        <type>java.lang.Integer</type>
      </parameter>
      <parameter>
        <description>Filename of template file</description>
        <name>templateFile</name>
        <type>java.lang.String</type>
      </parameter>
      <parameter>
        <description>Human performer</description>
        <name>humanPerformer</name>
        <type>java.lang.String</type>
      </parameter>
      <parameter>
        <description>Schedule date</description>
        <name>scheduleDate</name>
        <type>java.lang.Long</type>
      </parameter>
      <return-type>void</return-type>
   </operation>

   &defaultOperations;
   
</mbean>
