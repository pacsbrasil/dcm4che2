<?xml version="1.0" encoding="UTF-8"?>
<!-- $Id$ -->
<server>
  <classpath codebase="lib" archives="dcm4jboss.jar"/>
  <mbean code="org.dcm4chex.archive.dcm.mcmscu.MCMScuService" 
         name="tiani.archive:service=MCMScu"
         xmbean-dd="xmdesc/dcm4jboss-mcmscu-xmbean.xml">
    <depends>
      tiani.archive:service=Queue,name=MCMScu
    </depends>
    <depends>
      jboss.mq:service=InvocationLayer,type=JVM
    </depends>
  </mbean>

  <mbean code="org.jboss.varia.scheduler.Scheduler" 
	 name="tiani.archive:service=Scheduler,name=MCMScuService.collectStudies"
	 xmbean-dd="xmdesc/dcm4jboss-study2media-scheduler-xmbean.xml">

    <!-- To avoid NameNotBoundExceptions during server startup. MUST be
	removed, if the service is NOT deployed in the same jboss instance
	as the MediaComposer EJB!
	-->
    <depends>jboss.j2ee:jndiName=ejb/MediaComposer,service=EJB</depends>
  </mbean>

  <mbean code="org.jboss.varia.scheduler.Scheduler" 
	 name="tiani.archive:service=Scheduler,name=MCMScuService.updateMediaStatus"
	 xmbean-dd="xmdesc/dcm4jboss-updatemediastatus-scheduler-xmbean.xml">

    <!-- To avoid NameNotBoundExceptions during server startup. MUST be
	removed, if the service is NOT deployed in the same jboss instance
	as the MediaComposer EJB!
	-->
    <depends>jboss.j2ee:jndiName=ejb/MediaComposer,service=EJB</depends>
  </mbean>

  <mbean code="org.jboss.varia.scheduler.Scheduler" 
	 name="tiani.archive:service=Scheduler,name=MCMScuService.burnMedia"
	 xmbean-dd="xmdesc/dcm4jboss-burnmedia-scheduler-xmbean.xml">

    <!-- To avoid NameNotBoundExceptions during server startup. MUST be
	removed, if the service is NOT deployed in the same jboss instance
	as the MediaComposer EJB!
	-->
    <depends>jboss.j2ee:jndiName=ejb/MediaComposer,service=EJB</depends>
  </mbean>
</server>