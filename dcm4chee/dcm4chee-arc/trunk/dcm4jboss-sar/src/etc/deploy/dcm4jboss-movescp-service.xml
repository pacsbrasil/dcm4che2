<!--  DICOM Query Service Configuration                                   -->
<!--                                                                       -->
<!-- ===================================================================== -->

<server>

  <classpath codebase="lib" archives="@ARCHIVES@"/>

  <mbean code="org.dcm4chex.service.QueryScpService" 
         name="dcm4chex:service=QueryScp">

    <depends optional-attribute-name="DcmServerName">
        dcm4chex:service=DcmServer,name=DCMSRV
    </depends>
    
    <attribute name="MountPoint">/var/local/dcm4che/arch1</attribute>

    <attribute name="DsJndiName">java:/PostgresDS</attribute>    

    <attribute name="LdapBaseDN">dc=tiani,dc=com</attribute>    
    <attribute name="LdapHost">localhost</attribute>    
    <attribute name="LdapPort">389</attribute>    

         
  </mbean>

</server>

