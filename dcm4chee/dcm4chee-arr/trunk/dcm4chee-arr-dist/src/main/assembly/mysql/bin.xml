<assembly>
  <id>bin</id>
  <formats>
    <format>zip</format>
  </formats>
  <baseDirectory>dcm4chee-arr-${db}-${version}</baseDirectory>
  <fileSets>
    <fileSet>
      <directory>src/main</directory>
      <outputDirectory/>
      <includes>
        <include>*.txt</include>
        <include>bin/*.bat</include>
       </includes>
       <lineEnding>crlf</lineEnding>
    </fileSet>
    <fileSet>
      <directory>src/main</directory>
      <outputDirectory/>
      <includes>
        <include>bin/*.sh</include>
      </includes>
      <lineEnding>lf</lineEnding>
      <fileMode>0755</fileMode>
    </fileSet>
    <fileSet>
      <directory>src/main</directory>
      <outputDirectory/>
      <includes>
        <include>bin/run.conf</include>
      </includes>
     <lineEnding>lf</lineEnding>
    </fileSet>
    <fileSet>
      <directory>src/main</directory>
      <outputDirectory/>
      <includes>
        <include>bin/JavaService.exe</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/config/common</directory>
      <outputDirectory>server/default</outputDirectory>
      <includes>
        <include>conf/**</include>
        <include>deploy/**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/config/${db}</directory>
      <outputDirectory>server/default</outputDirectory>
      <includes>
        <include>conf/**</include>
        <include>deploy/**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../dcm4chee-arr-entities/target/hibernate3/sql</directory>
      <outputDirectory>sql</outputDirectory>
      <includes>
        <include>dcm4chee-arr-${db}.ddl</include>
      </includes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>server/default/lib</outputDirectory>
      <includes>
        <include>dcm4che:dcm4chee-audit-logger</include>
        <include>dcm4che:dcm4chee-audit-login</include>
        <include>dcm4che:dcm4che-audit</include>
        <include>mysql:mysql-connector-java</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>server/default/deploy</outputDirectory>
      <includes>
        <include>dcm4che:dcm4chee-arr-${db}</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>
