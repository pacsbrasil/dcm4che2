<project>
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>dcm4che</groupId>
    <artifactId>dcm4chee-arr</artifactId>
    <version>1</version>
  </parent>
  <groupId>dcm4che</groupId>
  <artifactId>dcm4chee-arr-${db}</artifactId>
  <packaging>pom</packaging>
  <version>3.0.3</version>
  <name>Assemble Distribution for ARR</name>
  <dependencies>
    <dependency>
      <groupId>dcm4che</groupId>
      <artifactId>dcm4chee-arr-${db}</artifactId>
      <type>ear</type>
      <version>3.0.3</version>
    </dependency>
    <dependency>
      <groupId>dcm4che</groupId>
      <artifactId>dcm4chee-audit-logger</artifactId>
      <version>2.12.0</version>
    </dependency>
    <dependency>
      <groupId>dcm4che</groupId>
      <artifactId>dcm4chee-audit-login</artifactId>
      <version>2.12.0</version>
    </dependency>
    <dependency>
      <groupId>dcm4che</groupId>
      <artifactId>dcm4che-audit</artifactId>
      <version>2.0.11</version>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <descriptors>
            <descriptor>src/main/assembly/bin.xml</descriptor>
          </descriptors>
        </configuration>
      </plugin>    
    </plugins>
  </build>
</project>
