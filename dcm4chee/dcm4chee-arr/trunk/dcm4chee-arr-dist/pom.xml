<project>
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>dcm4che</groupId>
    <artifactId>dcm4chee-arr</artifactId>
    <version>3.0.4</version>
  </parent>
  <groupId>dcm4che</groupId>
  <artifactId>dcm4chee-arr-dist-${db}</artifactId>
  <packaging>pom</packaging>
  <version>3.0.4</version>
  <name>Assemble Distribution for ARR</name>
  <dependencies>
    <dependency>
      <groupId>dcm4che</groupId>
      <artifactId>dcm4chee-arr-${db}</artifactId>
      <type>ear</type>
      <version>3.0.4</version>
    </dependency>
    <dependency>
      <groupId>dcm4che</groupId>
      <artifactId>dcm4chee-audit-logger</artifactId>
      <version>2.13.0</version>
    </dependency>
    <dependency>
      <groupId>dcm4che</groupId>
      <artifactId>dcm4chee-audit-login</artifactId>
      <version>2.13.0</version>
    </dependency>
    <dependency>
      <groupId>dcm4che</groupId>
      <artifactId>dcm4che-audit</artifactId>
      <version>2.0.11</version>
    </dependency>
    <dependency>
      <groupId>postgresql</groupId>
      <artifactId>postgresql</artifactId>
      <version>8.2-506.jdbc3</version>
    </dependency>
    <dependency>
      <groupId>mysql</groupId>
      <artifactId>mysql-connector-java</artifactId>
      <version>5.0.5</version>
    </dependency>
  </dependencies>
  <build>
    <finalName>dcm4chee-arr-${db}-${version}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <appendAssemblyId>false</appendAssemblyId>
          <descriptors>
            <descriptor>src/main/assembly/${db}/bin.xml</descriptor>
          </descriptors>
        </configuration>
      </plugin>    
    </plugins>
  </build>
</project>
